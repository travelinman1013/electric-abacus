{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client", "vitest/globals", "@playwright/test"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "@domain/*": ["../../packages/domain/src/*"],
      "@domain/terminology": ["../../packages/domain/src/terminology"],
      "@domain/preferences": ["../../packages/domain/src/preferences"],
      "@electric/firebase": ["../../packages/firebase/src/client-only.ts"]
    }
  },
  "include": ["src", "vite-env.d.ts", "vitest.setup.ts", "playwright.config.ts", "tests"],
  "exclude": ["src/**/*.test-d.ts"],
  "references": [{ "path": "../../packages/domain" }]
}
